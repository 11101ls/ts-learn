{
  "compilerOptions": {
    "module": "esnext",// 指定模块规范
    "target": "ES2021",//指定编译版本
    "jsx": "preserve",
    "strictFunctionTypes": true,

    "lib": ["ES2021","DOM"],//指定使用库
    "outDir": "./dists/", //输出目录
    // "outFile": "" //将文件合并
    "allowJs": false,  //是否编译js
    "checkJs": false, //是否检查js代码
    "removeComments": false,//移除注释
    "noEmit": false,//不生成编译后文件
    "noEmitOnError": true,//有错误时不生成编译文件
    "esModuleInterop":true,
    /*Focus 代码检查 */
    
    "alwaysStrict": false, //编译后文件是否严格模式
    "noImplicitAny": true,//默认类型 是否是any
    "noImplicitThis": false,//不允许不明确的this
    "strictNullChecks": false,//严格检查空值
    "strict": true,//严格检查
  
  },


  // Focus 配置了webpack
  // // 指定编译文件
  // /*  一个* 任意文件 **  任意目录 */
  // "include": ["./src/**/*"],
  // // 排除
  // "exclude": [
  //   "node_modules",
  //   "**/node_modules/*"
  // ]
  // //   "files": []   列出文件
}